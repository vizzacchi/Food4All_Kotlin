<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actParceiros">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

        <ImageView
            android:id="@+id/imgParceirosMc"
            android:layout_width="98dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/mc" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/baseline_handshake_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="McDonalds"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Uma das maiores redes de FastFood do mundo aderiu a nossa idéia."
            android:textAlignment="center"
            android:translationY="25sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:autoLink="web"
            android:text="Ver perfil"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/secundary"
            android:translationY="70sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCarrefour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardMc">

        <ImageView
            android:id="@+id/imgParceirosCarrefour"
            android:layout_width="98dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/carrefour" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/baseline_handshake_24" />

        <TextView
            android:id="@+id/textCarrefour"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Carrefour"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textCarrefour2"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Uma das maiores redes de FastFood do mundo aderiu a nossa idéia."
            android:textAlignment="center"
            android:translationY="25sp" />

        <TextView
            android:id="@+id/textCarrefour4"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:autoLink="web"
            android:text="Ver perfil"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/last"
            android:translationY="70sp" />/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/carOutback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:padding="10dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardCarrefour">

        <ImageView
            android:id="@+id/imgParceirosOut"
            android:layout_width="98dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/outback" />

        <TextView
            android:id="@+id/textOutBack"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Outback"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textDescOutback"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Uma rede de restaurantes com mais de 900 lojas no mundo."
            android:textAlignment="center"
            android:translationY="25sp" />

        <TextView
            android:id="@+id/textLinkOutback"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Ver perfil"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/last"
            android:translationY="70sp" />/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/carParis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:padding="10dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carOutback">

        <ImageView
            android:id="@+id/imgParceirosParis"
            android:layout_width="98dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/paris" />

        <TextView
            android:id="@+id/textParis"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Paris 6"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/textDescParis"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Uma rede de restaurantes com mais de 900 lojas no mundo."
            android:textAlignment="center"
            android:translationY="25sp" />

        <TextView
            android:id="@+id/textLinkParis"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Ver perfil"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/last"
            android:translationY="70sp" />/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtTituloParceiros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Doadores:"
        android:textColor="@color/home"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Pesquisar..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloParceiros" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ver voluntários"
        android:textColor="@color/home"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carParis" />

</androidx.constraintlayout.widget.ConstraintLayout>